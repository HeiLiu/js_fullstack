bg_color = #123456;
box_size = 100px;

vendor(prop,args)
    -webkit-{prop} args
    -moz-{prop} args
    -ms-{prop} args
    -o-{prop} args
    {prop} args

border-radius(n)
    vendor('border-radius',arguments)


box-shadow(n)
    vendor('box-shadow',arguments )
// 只写标准属性 前缀自动帮生成？ mixin 混合
//Css3属性兼容性
.box
    background-color bg_color
    width box_size
    height box_size
    border-radius(5px)
    box-shadow(1px 1px 10px rgba(0,0,0,.5))